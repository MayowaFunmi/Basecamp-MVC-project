@model IEnumerable<ApplicationUser>

@if (TempData["msg"] != null)
{
  <p>@TempData["msg"]</p>
}

<h2>All Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@Html.ActionLink("View User", "GetUserById", new { userId = user.Id }, new { @class = "btn btn-primary" })</td>
                @* <a asp-action="GetUserById" asp-route-userId="@user.Id" class="btn btn-primary">View User</a> *@
            </tr>
        }
    </tbody>
</table>